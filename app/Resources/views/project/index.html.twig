{% extends 'layout_admin.html.twig' %}


    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/bootstrap-select.min.css') }}">
    {% endblock %}

{% block content %}

<div class="container-fluid">

    <div class="search">
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4 blocksearch">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_row(form.school) }}
                {{ form_row(form.category) }}
                {{ form_row(form.promotion) }}
                <button type="submit" class="btn btn-default btn-wcs">OK</button>
                {{ form_end(form) }}

                {{ form_start(form) }}
                {{ form_row(form.Recherche) }}
                {{ form_end(form) }}
            </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
    </div>

    <div class="row col-md-12">

    <h1>Projects list</h1>

        <table class="table table-condensed">
            <thead>
                <tr>

                    <th>Photo</th>
                    <th>Title</th>
                    <th>Customer</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Category</th>
                    <th>School</th>
                    <th>Url</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="projec-list">
            {% for project in projects %}
                <tr>
                    <td>picture</td>
                    <td><a href="{{ path('project_show', { 'id': project.id }) }}">{{ project.title }}</a></td>
                    <td>{{ project.customer }}</td>
                    <td>{% if project.date %}{{ project.date|date('Y-m-d') }}{% endif %}</td>
                    <td>{{ project.status }}</td>
                    <td>{{ project.category.label }}</td>
                    <td>{{ project.school.school }}</td>
                    <td>{{ project.path }}</td>
                    <td>
                        <a href="{{ path('project_edit', { 'id': project.id }) }}" class="btn btn-success">
                            <span class="glyphicon glyphicon-pencil"></span> Modifier
                        </a>
                        <a href="{{ path('project_delete', { 'id': project.id }) }}" class="btn btn-default">
                            <span class="glyphicon glyphicon-trash"></span> Delete
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('project_new') }}" role="button">Create a new project</a>

    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/ajax_auto_admin.js') }}" ></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap-select.min.js') }}" ></script>
{% endblock javascripts %}
