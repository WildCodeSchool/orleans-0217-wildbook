{% extends 'layout_admin.html.twig' %}
{% form_theme edit_form 'bootstrap_3_horizontal_layout.html.twig' %}


{% block content %}

<div class="container-fluid">


        <h3>Projet: id:{{ project.id }} - {{ project.title }}</h3>
        <h4>Wilders ayant réalisé le projet : </h4>
            <ul>{% for projectWilders in project.projectWilders %}
            <li>{{ projectWilders.wilder.firstname }}{{ projectWilders.wilder.lastname }}</li>
            {% endfor %}</ul>
        <div class="form-group">
            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Edit" />
        </div>
        {{ form_end(edit_form) }}

        <div class="form-group">
            {{ form_start(delete_form) }}
            <input type="submit" class="btn btn-danger" value="Delete">
            {{ form_end(delete_form) }}
        </div>

        <div class="form-group">
            <a href="{{ path('project_index') }}" class="btn btn-primary">Retour à la liste</a>
        </div>


</div>
{% endblock %}
