{% extends 'layout_admin.html.twig' %}

{% block content %}

<div class="container-fluid">

    <h1>Liste des Campus Manager</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th>Username</th>
                <th>Ecole</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for campusManager in campusManagers %}
            <tr>
                <td>{{ campusManager.firstname }}</td>
                <td>{{ campusManager.lastname }}</td>
                <td>{{ campusManager.user}}</td>
                <td>{{ campusManager.school.school}}</td>
                <td>
                    <a href="{{ path('campusmanager_edit', { 'id': campusManager.id }) }}" class="btn btn-success">
                        <span class="glyphicon glyphicon-pencil"></span> edit
                    </a>
                </td>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                <td>
                    {{ render(controller('BookBundle:CampusManager:indexDelete', {'id': campusManager.id})) }}
                </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
