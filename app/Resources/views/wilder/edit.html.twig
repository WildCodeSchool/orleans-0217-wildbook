{% extends 'layout_admin.html.twig' %}
{% form_theme edit_form 'bootstrap_3_layout.html.twig' %}


{% block content %}

    <div class="container-fluid">


        <h3>Wilder: {{ wilder.firstname }} {{ wilder.lastname }}</h3>
        <h4>Email User: {{ wilder.user.email }}</h4>
        <h4>Username: {{ wilder.user.username }}</h4>
        <ul>Projets réalisés : {% for projectWilders in wilder.projectWilders %}
               <li> {{ projectWilders.project.title }}</li>
            {% endfor %}</ul>>
        <div class="form-group">
            {{ form_start(edit_form) }}

            {{ form_label(edit_form.firstname,'Prénom') }}
