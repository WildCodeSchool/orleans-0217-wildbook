            {{ form_label(edit_form.contactEmail,'Email contact') }}
            {{ form_widget(edit_form.contactEmail) }}
            {{ form_errors(edit_form.contactEmail) }}

            {{ form_label(edit_form.profilPicture,'Photo Profil') }}
