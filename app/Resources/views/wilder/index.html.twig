{% extends 'layout_admin.html.twig' %}

    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/bootstrap-select.min.css') }}">
    {% endblock %}

{% block content %}

    <div class="container-fluid">

        <div class="search-area">
            <div class="search">
                <div class="row">
                    <div class="col-lg-4 col-lg-offset-4 blocksearch">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        {{ form_row(form.school) }}
                        {{ form_row(form.promotion) }}
                        <button type="submit" class="btn btn-default btn-wcs">OK</button>
                        {{ form_row(form.Recherche) }}
                    </form>
                    </div><!-- /.col-lg-6 -->
                </div><!-- /.row -->
            </div>
        </div>

        <div class="row col-md-12">

            <h1>Wilders list</h1>

            <table class="table table-condensed">

                <thead>
                <tr>
                    <th>Photo De Profil</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Ville</th>
                    <th>Promotion</th>
                    <th>Useractivation</th>
                    <th>Manageractivation</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody id="wild-list">

                {% if blocResult=='' %}

                {% else %}

                    {% for wilder in wilders %}
                        <tr>
                            <td><a href="{{ path('wilder_show', { 'id': wilder.id }) }}"> <img src="{{ asset
                                    ('uploads/'~ wilder.profilPicture|basename ) }}" alt="{{ wilder.firstname }} {{
                                    wilder.lastname }}" class="imageShearchWilderAdmin"></a></td>
                            <td>{{ wilder.firstname }}</td>
                            <td>{{ wilder.lastname }}</td>
                            <td>{{ wilder.city }}</td>
                            <td>{{ wilder.promotion.promotion }}</td>
                            <td>{% if wilder.userActivation %}Yes{% else %}No{% endif %}</td>
                            <td>{% if wilder.managerActivation %}Yes{% else %}No{% endif %}</td>
                            <td>
                                <a href="{{ path('wilder_edit', { 'id': wilder.id }) }}" class="btn btn-success">
                                    <span class="glyphicon glyphicon-pencil"></span> Modifier
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
            <a class="btn btn-default" href="{{ path('wilder_new') }}" role="button">Crée un nouveau wilder</a>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/ajax_auto_admin.js') }}" ></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap-select.min.js') }}" ></script>
{% endblock javascripts %}
