{% extends 'layout_admin.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block content %}
    <div class="container-fluid">

        <h3>Créer une nouvelle école</h3>
        <div class="form-group">
            {{ form_start(form) }}
            {{ form_label(form.school,'Ecole') }}
            {{ form_widget(form.school) }}
            {{ form_errors(form.school) }}
            {{ form_label(form.address,'Adresse') }}
            {{ form_widget(form.address) }}
            {{ form_errors(form.address) }}
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Créer"/>
            <a href="{{ path('school_index') }}" class="btn btn-default">Retour à la liste</a>
        </div>
        {{ form_end(form) }}

    </div>
{% endblock %}