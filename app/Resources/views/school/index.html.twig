{% extends 'layout_admin.html.twig' %}

{% block content %}

    <div class="container-fluid">
        <h1>Liste des écoles</h1>

        <table class="table table-condensed">
            <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for school in schools %}
                <tr>
                    <td>{{ school.id }}</td>
                    <td>{{ school.school }}</td>

                    <td>
                        <a href="{{ path('school_edit', { 'id': school.id }) }}" class="btn btn-default">
                            <span class="glyphicon glyphicon-pencil"></span> Modifier
                        </a>
                    </td>

                    <td>{{ render(controller('BookBundle:School:indexDelete', {'id': school.id})) }}</td>

                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-default" href="{{ path('school_new') }}" role="button">Créer une école</a>
    </div>
{% endblock %}
