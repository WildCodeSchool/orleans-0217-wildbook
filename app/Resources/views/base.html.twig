    <link rel="icon" type="image/png" href="{{ asset('images/LOGO_WCS_ORANGE-BLANC_PASTILLE.png') }}"/>

</head>

<body>

{% block body %}

{% endblock body %}

{% block container %}

{% endblock container %}

{% block footer %}

    <footer class="container-fluid homeFooter">

        <div class="container">

            {#LOGO + INVITATION NEWSLETTER#}
            <div class="horizontalCenter">
                <img class="homeFooterLogo shadow" src="{{ asset('images/LOGO_WCS_ORANGE-BLANC_PASTILLE.png') }}"
                     alt="..."/>

                <h4 class="homeFooterH4">
                    Des News Tech et Wild dans votre inbox - Abonnez vous à notre newsletter
                </h4>
            </div>

            {#FORMULAIRE NEWSLETTER#}
            <form class="form-inline homeFooterNewsLetterForm">
                <div class="form-group row">
                    <input class="form-control shadow homeFooterNewsLetterField"
                           type="email"
                           id="Email"
                           placeholder="Renseigner votre e-mail">
                </div>
                <button type="submit" class="btn btn-default shadow homeFooterNewsLetterButton">GO WILD</button>
            </form>

            {#ICÔNES RÉSEAUX SOCIAUX#}
