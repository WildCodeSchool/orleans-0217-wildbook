<!DOCTYPE html>
<html lang="fr">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="L'école de code Wild Code School vous présente ses élèves et ses projets.">
    <meta name="author" content="Wild Code School Orléans">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="{{ asset('images/LOGO_WCS_ORANGE-BLANC_PASTILLE.png') }}"/>

    <title>{% block title %}Wild Book{% endblock %}</title>

    {% block stylesheets %}

        <!-- Style -->
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style2.css') }}">

        <!-- Fonts -->
        <link rel="stylesheet" href="{{ asset('fonts/font-awesome-4.7.0/css/font-awesome.min.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i"
              rel="stylesheet">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">

        <!-- Navbar CSS -->
        <link rel="stylesheet" href="{{ asset('css/scrolling-nav.css') }}">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->

        <!-- jQuery -->
        <script src="{{ asset('js/jquery.js') }}"></script>

    {% endblock stylesheets %}

</head>

<!-- The #page-top ID is part of the scrolling feature -->
<!-- The data-spy and data-target are part of the built-in Bootstrap scrollspy function -->
<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">

{% block nav %}
{% endblock nav %}

{% block body %}
{% endblock body %}

{% block container %}
{% endblock container %}

{% block footer %}
    <footer class="container-fluid homeFooter">

            <!-- Logo footer -->
            <img class="footerLogo shadow" src="{{ asset('images/LOGO_WCS_ORANGE-BLANC_PASTILLE.png') }}"
                 alt="La Wild"/>

            <!-- Social networks -->
            <div class="socialbloc">

                <h4 class="footerH4">Suivez la Wild Code School sur vos réseaux favoris</h4>

                <div class="footerSocial">
                    <div class="footerSocialIcon">
                        <a href=""><i class=" fa fa-facebook shadow"></i></a>
                    </div>
                    <div class="footerSocialIcon">
                        <a href=""><i class=" fa fa-twitter shadow"></i></a>
                    </div>
                    <div class="footerSocialIcon">
                        <a href=""><i class=" fa fa-linkedin shadow"></i></a>
                    </div>
                    <div class="footerSocialIcon">
                        <a href=""><i class=" fa fa-youtube shadow"></i></a>
                    </div>
                    <div class="footerSocialIcon">
                        <a href=""><i class=" fa fa-instagram shadow"></i></a>
                    </div>
                    <div class="footerSocialIcon">
                        <a href=""><i class=" fa fa-github shadow"></i></a>
                    </div>
                </div>

            </div>

            <!-- Copyrights -->
            <div class="footerCopyrights">
                © 2017 — Wild Code School Orléans — Véro Ludo Camo
            </div>

    </footer>

{% endblock footer %}

{% block javascripts %}

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('js/bootstrap.js') }}"></script>

    <!-- Scrolling Nav JavaScript -->
    <script src="{{ asset('js/jquery.easing.min.js') }}"></script>
    <script src="{{ asset('js/scrolling-nav.js') }}"></script>

{% endblock javascripts %}

</body>

</html>