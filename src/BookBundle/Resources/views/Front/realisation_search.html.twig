{% extends 'layout.html.twig' %}

    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/bootstrap-select.min.css') }}">
    {% endblock %}

{% block body %}

    <div class="container-fluid img1">
        <h1>NOS REALISATIONS</h1>
    </div>

    <div class="container">

        <div class="sub-title">
            <h2>Trouver une réalisation</h2>
        </div>

        <div class="search-area">
            <div class="search">
                <div class="row">
                    <div class="row projectAutocompletion">
                        <div class="col-lg-5 col-lg-offset-3">
                            {{ form_label(form.Recherche,'Rechercher un projet par son nom ') }}
                            {{ form_widget(form.Recherche) }}
                            {{ form_errors(form.Recherche) }}
                        </div>
                    </div>
                    <hr>
                    <div class="col-lg-5 col-lg-offset-5 projetTransition">
                        <p>Ou sélectionner un ou plusieurs critères</p>
                    </div>
                    <div class="col-lg-12 blocksearch">
                        {{ form_start(form, {'attr':{'id':'form_search_project'}}) }}

                        {{ form_errors(form) }}
                        <div class="row">
                            <div class="col-lg-2 col-lg-offset-1">
                                {{ form_label(form.school,'Ecole') }}
                                {{ form_widget(form.school) }}
                                {{ form_errors(form.school) }}
                            </div>
                            <div class="col-lg-2 col-lg-offset-1">
                                {{ form_label(form.promotion,'Promotion') }}
                                {{ form_widget(form.promotion) }}
                                {{ form_errors(form.promotion) }}
                            </div>
                            <div class="col-lg-2 col-lg-offset-1">
                                {{ form_label(form.category,'Categorie') }}
                                {{ form_widget(form.category) }}
                                {{ form_errors(form.category) }}
                            </div>

                            <div class="col-lg-2 col-lg-offset-1">
                                <button type="submit" class="btn btn-default btn-wcs btn-searchProject">OK</button>
                            </div>
                        </div>

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>

        <!--Projects list -->
        <div class="list_projects row" id="project-list">
            <div class="row">
                {% for projectSearch in projectsSearch %}
                    {% include 'BookBundle:Front:thumbnail.html.twig' with {'projectSearch': projectSearch} %}
                {% endfor %}
        </div>
    </div>

    <div class="container">
        <div class="realisation-focus">
            <div class="sub-title-slider">
                <h2>La réalisation du moment</h2>
            </div>

            <div class="sub-title-text">
            </div>
            {{ render(controller('BookBundle:HomeProject:viewHomeProject')) }}
        </div>
    </div>
    </div>


    <div class="container-fluid img2">
    </div>

{% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/ajax_auto.js') }}"></script>
        <script src="{{ asset('js/bootstrap-select.min.js') }}"></script>

        <script>
            $('#book_bundle_project_search_type_school').on('hidden.bs.select', function (e) {
                $('#form_search_project').submit();
            });
        </script>

    {% endblock javascripts %}