{% extends 'layout.html.twig' %}

    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/bootstrap-select.min.css') }}">
    {% endblock %}

{% block body %}

    <div class="container-fluid img1">
        <h1>NOS REALISATIONS</h1>
    </div>

    <div class="container">

        <div class="sub-title">
            <h2>Trouver une réalisation</h2>
        </div>


        <div class="search-area">

            <div class="search">
                <div class="row">
                    <div class="col-lg-4 col-lg-offset-4 blocksearch">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        {{ form_row(form.school) }}
                        {{ form_row(form.category) }}
                        {{ form_row(form.promotion) }}
                        <button type="submit" class="btn btn-default btn-wcs">OK</button>
                        {{ form_end(form) }}

                        {{ form_start(form) }}
                        {{ form_row(form.Recherche) }}
                        {{ form_end(form) }}
                    </div><!-- /.col-lg-6 -->
                </div><!-- /.row -->
            </div>

            <div class="search-selectors">
                <div class="row col-xs-offset-2">
                </div>
            </div>
        </div>

        <div class="list_realisations row" id="project-list">

        </div>


        {% if blocResult=='' %}

        <div class="realisation-focus">

            <div class="sub-title-slider">
                <h2>La réalisation du moment</h2>
            </div>

            <div class="sub-title-text">
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum id erat in est ultrices tempus.
                    Aenean dignissim aliquet dui, eget ullamcorper enim laoreet nec.
                    Vestibulum fermentum mauris condimentum velit posuere, at fermentum libero malesuada</p>
            </div>

            <div class="slider">
                <div id="carousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel" data-slide-to="1"></li>
                        <li data-target="#carousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img src="{{ asset('images/slider01.jpg') }}" height="760px" alt="slider01">
                            <div class="carousel-caption">
                            </div>
                        </div>
                        <div class="item">
                            <img src="{{ asset('images/slider02.jpg') }}" height="760px" alt="slider02">
                            <div class="carousel-caption">
                            </div>
                        </div>
                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>

            {% else %}
                <div class="list_realisations">
                    {% for projectSearch in projectsSearch%}
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                            <a href="{{ path('detail_project', { 'id': projectSearch.id }) }}" class="thumbnail">
                                <img src="{{ asset('images/LOGO_COLO.png') }}" alt="">
                            </a>
                            <h4>{{ projectSearch.title }}</h4>
                            {{ dump(projectSearch) }}
                        </div>
                    {% endfor %}
                </div>

            {% endif %}

    </div>

    <div class="container-fluid img2">
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/ajax_auto.js') }}"></script>
    <script src="{{ asset('js/bootstrap-select.min.js') }}"></script>
{% endblock javascripts %}