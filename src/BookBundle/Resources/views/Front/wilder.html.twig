{% extends 'layout.html.twig' %}

{% block body %}

    <div class="container-fluid">

        <div class="container">

            <div class="row modjoProfilWilder">
                <p>{{ wilder.modjo }}</p>
            </div>

            <div class="row">
                <hr/>
            </div>

            <div class="row profilWilder">
                <div class="col-lg-6 imageProfilWilder">
                    <img class="img-listWilders" src="
                                            {{ wilder.profilPicture
                    ?  asset('uploads/'~ wilder.profilPicture )
                    :  asset('images/placeholder_wilder.png' ) }}
                                          " alt="{{ wilder.firstname }} {{ wilder.lastname }}"
                    >
                </div>
                <div class="col-lg-5">
                    <h3 class="firstnameWilder">{{ wilder.lastname|upper }} {{ wilder.firstname }}</h3>
                    <p class="promotionWilder">{{ wilder.promotion.school.school }} - <span
                                class="text-muted">{{ wilder.promotion.promotion }}</span></p>
                    <span class="label label-warning dispoWilder">{{ wilder.availability.label }}</span>
                    <p class="freelanceWilder">{{ wilder.freelanceAvailability ? 'Accepte des missions Freelance' }}</p>
                    <p class="websiteWilder"><a class="websiteWilder"
                                                href="{{ wilder.website }}">{{ wilder.website }}</a></p>

                    <div class="socialProWilder">
                        <div class="iconsocial">
                            {% if wilder.linkedin is not null %}
                                <a href="{{ wilder.linkedin }}" title="Profil Linkedin">
                                    <span class="fa-stack fa-lg">
                                      <i class="fa fa-circle fa-stack-2x"></i>
                                      <i class="fa fa-linkedin fa-stack-1x"></i>
                                    </span>
                                </a>
                            {% endif %}
                        </div>
                        <div class="iconsocial">
                            {% if wilder.github is not null %}
                                <a href="{{ wilder.github }}" title="Profil Github">
                                    <span class="fa-stack fa-lg">
                                      <i class="fa fa-circle fa-stack-2x"></i>
                                      <i class="fa fa-github fa-stack-1x"></i>
                                    </span>
                                </a>
                            {% endif %}
                        </div>
                        <div class="iconsocial">
                            {% if wilder.cv is not null %}
                                <a href="{{ asset('uploads/' ~ wilder.cv) }}" title="Télécharger le CV">
                                    <span class="fa-stack fa-lg">
                                      <i class="fa fa-circle fa-stack-2x"></i>
                                      <i class="fa fa-download fa-stack-1x"></i>
                                    </span>
                                </a>
                            {% endif %}
                        </div>
                        <div class="iconsocial">
                            {% if wilder.contactEmail is not null %}
                                <a href="mailto:{{ wilder.contactEmail }}" title="Envoyer un email">
                                    <span class="fa-stack fa-lg">
                                      <i class="fa fa-circle fa-stack-2x"></i>
                                      <i class="fa fa-envelope fa-stack-1x"></i>
                                    </span>

                                </a>
                            {% endif %}
                        </div>
                        <div class="inconsocial">
                            {% if codewars is not null %}
                                <a href="" class="codewars"
                                   title="Score Codewars : {{ codewars }} Points" data-toggle="tooltip"
                                   data-placement="top">
                                    <span class="fa-stack fa-lg">
                                      <i class="fa fa-circle fa-stack-2x"></i>
                                      <i class="fa fa-gamepad fa-stack-1x"></i>
                                    </span>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                    <div class="socialPersoWilder">
                        <div class="iconsocial">
                            {% if wilder.twitter is not null %}
                                <a href="{{ wilder.twitter }}" title="Profil Twitter">
                                    <span class="fa-stack fa-lg">
                                      <i class="fa fa-circle fa-stack-2x"></i>
                                      <i class="fa fa-twitter fa-stack-1x"></i>
                                    </span>
                                </a>
                            {% endif %}
                        </div>
                        <div class="iconsocial">
                            {% if wilder.facebook is not null %}
                                <a href="{{ wilder.facebook }}" title="Profil Facebook">
                                    <span class="fa-stack fa-lg">
                                      <i class="fa fa-circle fa-stack-2x"></i>
                                      <i class="fa fa-facebook fa-stack-1x"></i>
                                    </span>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <hr/>
            </div>

            <div class="row contentProfilWilder">
                <div class="col-md-3 contentProfilWilderLeft">
                    <div class="langagesWilder">
                        <h4 class="langagesWilder">LANGAGES</h4>
                        <ul class="langagesWilder">{% for languages in wilder.languages %}
                                <li class="langagesWilder">{{ languages.language }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="technologiesWilder">
                        <h4 class="technologiesWilder">TECHNOLOGIES</h4>
                        <ul class="technologiesWilder">{% for technologies in wilder.technologies %}
                                <li class="technologiesWilder">{{ technologies.technology }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="competences">
                        <h4 class="competences">COMPETENCES</h4>
                        <p class="competences">{{ wilder.skill }}</p>
                    </div>
                </div>
                <div class="col-md-8 col-md-offset-1 contentProfilWilderRight">
                    <div class="bio">
                        <p class="bio">{{ wilder.biography }}</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <hr/>
            </div>

            <div class="row imgProjectWilder">
                <h2 class="text-center ">Projets</h2>
                {% for projectsWilder in wilder.projectWilders %}
                    {% include 'BookBundle:Front:thumbnail_wilder_projects.html.twig' with {'projectSearch': projectsWilder} %}
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
